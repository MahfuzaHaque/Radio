<resources>

    <style name="Ucmp.BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/icon_color</item>
    </style>

    <style name="UAppTheme" parent="Ucmp.BaseTheme"></style>

    <style name="UAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <item name="android:textColorSecondary">@color/icon_color</item>
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/icon_color</item>

    </style>


    <style name="MySearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="closeIcon">@drawable/ic_close_black_24dp</item>
        <item name="searchHintIcon">@drawable/ic_search_black_24dp</item>

    </style>


    <style name="UcmpButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="UAppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="UAppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="customizedAlertSlideUpAndDown" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/rouund_corner_bg</item>
        <item name="android:textColorSecondary">@color/icon_color</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="UAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="UAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
